<!-- Page Content -->
<div class="container">

	<div class="row">

		<!-- Blog Post Content Column -->
		<div class="col-lg-8">

			<!-- Blog Post -->

			<%= form_for [@user, @post] do |f| %>

				<!-- Title -->
				<h1>New Post</h1>

				<hr>

				<div>
					<%= f.text_field :post_title, class: "form-control", placeholder: "Post Title" %>
				</div>

				<%= f.text_area :post_text, class: "form-control margin-top-20", placeholder: "Your Post", rows: 10 %>

				<div class="margin-top-20">
					<%= f.text_field :cover_image, class: "form-control", placeholder: "Blog Image" %>
				</div>

				<div class="margin-top-20">
					<%= f.submit "Submit Post", class: "btn btn-primary" %>
				</div>
			<% end %>

		</div>

		<!-- Blog Sidebar Widgets Column -->
		<div class="col-md-4">

			<%= render "partials/search" %>

			<!-- Side Widget Well -->
			<div class="well">
				<h4>Post Tips</h4>
				<p>Write well and don't forget to be funny!</p>
			</div>

		</div>

	</div>
	<!-- /.row -->

	<hr>

	<%= render "partials/footer" %>

</div>
<!-- /.container -->