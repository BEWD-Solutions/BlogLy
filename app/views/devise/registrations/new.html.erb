<% if devise_error_messages! != "" %>
    <div class="small-container alert alert-danger">
        <%= devise_error_messages! %>
    </div>
<% end %>

<div class="small-container well">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <h2>Create Account</h2>

        <div class="margin-top-20">
            <%= f.text_field :first_name, class: "form-control", placeholder: "First Name", autofocus: true %>
        </div>

        <div class="margin-top-20">
            <%= f.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
        </div>

        <div class="margin-top-20">
            <%= f.email_field :email, class: "form-control", placeholder: "Email" %>
        </div>

        <div class="margin-top-20">
            <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password" %>
        </div>

        <div class="margin-top-20">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Password Confirmation" %>
        </div>

        <div class="margin-top-20">
            <%= f.text_field :username, class: "form-control", placeholder: "Username" %>
        </div>

        <div class="margin-top-20">
            <%= f.text_area :about_me, class: "form-control", placeholder: "About Me" %>
        </div>

        <div class="margin-top-20">
            <%= f.submit "Create Account", class: "btn btn-primary" %>
        </div>

        <div class="margin-top-10">
            <%= render "devise/shared/links" %>
        </div>
    <% end %>
</div>
